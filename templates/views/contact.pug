extends ../layouts/layout

block content
	.page-wrappers
		//- START GOOGLE MAP
		section.p-t-60.container-fluid.no-padding.no-overflow
			//- Map
			#google-map.m-t-50.sm-m-t-10.full-width.demo-map.no-overflow
		//- END GOOGLE MAP
		//- START CONTACT SECTION
		section.container.container-fixed-lg.p-t-70.p-b-80.sm-p-t-30.sm-p-b-30
			.row
				.col-md-5
					.row
						.col-sm-6.col-md-12
							h4
								| Need service or support? 
								br
								| Type your needed request and  
								br
								| weâ€™ll find you a solution.
						.col-sm-6.col-md-12
							br.visible-md.visible-xs
							h5.block-title.hint-text.m-b-0 Mr. Chens.co 
							address.text-master.m-t-5
								| 5461 Atlanta Hwy, 
								br
								| Montgomery, AL 36109
								br
								span.bold Located in:
								br
								|  Montgomery East Plaza
				.col-md-7
					br.visible-xs
					br.visible-xs
					h4.sm-m-t-20 Say hellow!
					form(role='form', method='post')
						.row
							.col-sm-6
								.form-group.form-group-default(required)
									label.control-label First name
									input.form-control(type='text', name='fname')
							.col-sm-6
								.form-group.form-group-default(required)
									label.control-label Last name
									input.form-control(type='text', name='lname')
						.row
							.col-sm-12
								.form-group.form-group-default
									label.control-label Email
									input.form-control(type='text', name='mail', required)
						.form-group.form-group-default
							label.control-label Message
							textarea.form-control(style='height:100px', placeholder='Type the message you want inquire')
						p.pull-left.small.hint-text.m-t-5.font-arial.sm-m-t-10 I hereby certify that the information above is true and accurate. 
						button(type='submit').btn.btn-white.font-montserrat.all-caps.fs-11.pull-right.sm-m-t-10 Send request
						.clearfix
		//- END CONTACT SECION



