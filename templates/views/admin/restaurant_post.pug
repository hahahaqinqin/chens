extends ../../layouts/layout-admin

block css
	link(type='text/css', rel='stylesheet', href='/admin/assets/plugins/dropzone/css/dropzone.css')
	link(type='text/css', rel='stylesheet', href='/admin/assets/plugins/bootstrap3-wysihtml5/bootstrap3-wysihtml5.min.css')
	link(type='text/css', rel='stylesheet', href='/admin/assets/plugins/bootstrap-datepicker/css/datepicker3.css', media='screen')
	link(type='text/css', rel='stylesheet', href='/admin/assets/plugins/bootstrap-tag/bootstrap-tagsinput.css')

block content
	//- START PAGE CONTENT
	.content
		//- START CONTAINER FLUID
		.container-fluid.container-fixed-lg
			//- START PANEL
			.panel.panel-transparent
				.panel-heading
					.panel-title.cap-all
						| Add a new recipe
				.panel-body
					.row
						.col-sm-10
							if context
								if context.length
									form#form-work.form-horizontal(role='form', autocomplete='off', method='post')
										.form-group
											label.col-sm-2.control-label(for='fname') Name
											.col-sm-10
												input#fname.form-control(type='text', placeholder='Full name', name='name', value=context[0].name, required)
										.form-group
											label.col-sm-2.control-label Public
											.col-sm-10
												input#fstatus.switchery(type='checkbox', checked=context[0].onPublic, name="onPublic")
										.form-group
											label.col-sm-2.control-label Today's Special
											.col-sm-10
												input#fts.switchery(type='checkbox', checked=context[0].ts, name="ts")
										.form-group
											label.col-sm-2.control-label(for='fspicy') Spicy
											.col-sm-10
												input#fspicy.form-control(type='text', placeholder='1~5' value=context[0].spicy, name='spicy')
										.form-group
											label.col-sm-2.control-label(for='fdescription') Description
											.col-sm-10
												textarea.wysiwyg5.wysiwyg.form-control(placeholder='Enter text ...', name='description', required)= context[0].description
										.form-group
											label.col-sm-2.control-label(for='fprice') Price
											.col-sm-10
												input#fprice.autonumeric.form-control(type='text', placeholder='$0.00', name='price', data-a-dec='.', data-a-sep=',', data-a-sign='', value=context[0].price, required)
										.form-group
											label.col-sm-2.control-label(for='fdiscount') Discount
											.col-sm-10
												input#fdiscount.autonumeric.form-control(type='text', placeholder='0~10', name='discount', data-a-dec='.', data-a-sep=',', value=context[0].discount, data-a-sign='')
										.form-group
											label.col-sm-2.control-label(for='faddDate') AddDate
											.col-sm-10
												.input-group.date.col-sm-6
													input#faddDate.form-control(type='text', value=moment(context[0].addDate).format('MM/DD/YYYY'), name='addDate', placeholder='Pick a date')
													span.input-group-addon
														i.fa.fa-calendar
										.form-group
											label.col-sm-2.control-label(for='fendDate') EndDate
											.col-sm-10
												.input-group.date.col-sm-6
													input#fendDate.form-control(type='text', name='endDate', value=moment(context[0].endDate).format('MM/DD/YYYY'), placeholder='Pick a date')
													span.input-group-addon
														i.fa.fa-calendar
										.form-group
											label.col-sm-2.control-label(for='fpos') Position
											.col-sm-10
												input#fpos.form-control(type='text', placeholder='1~99' value=context[0].pos, name='pos')
										.form-group
											label.col-sm-2.control-label(for='ftags') Tags
											.col-sm-10
												input#ftags.form-control(type='text', value=context[0].tags[0], name='tags', placeholder='Tags')
										.form-group
											.col-sm-offset-2.col-sm-10
												button.btn.btn-success(type='submit') Submit
							else
								form#form-work.form-horizontal(role='form', autocomplete='off', method='post')
									.form-group
										label.col-sm-2.control-label(for='fname') Name
										.col-sm-10
											input#fname.form-control(type='text', placeholder='Full name', name='name', required)
									.form-group
										label.col-sm-2.control-label Public
										.col-sm-10
											input#fstatus.switchery(type='checkbox', checked='', name="onPublic")
									.form-group
										label.col-sm-2.control-label Today's Special
										.col-sm-10
											input#fts.switchery(type='checkbox', name="ts")
									.form-group
										label.col-sm-2.control-label(for='fspicy') Spicy
										.col-sm-10
											input#fspicy.form-control(type='text', placeholder='1~5' value='', name='spicy')
									.form-group
										label.col-sm-2.control-label(for='fdescription') Description
										.col-sm-10
											textarea.wysiwyg5.wysiwyg.form-control(placeholder='Enter text ...', name='description', required)
									.form-group
										label.col-sm-2.control-label(for='fprice') Price
										.col-sm-10
											input#fprice.autonumeric.form-control(type='text', placeholder='$0.00', name='price', data-a-dec='.', data-a-sep=',', data-a-sign='', required)
									.form-group
										label.col-sm-2.control-label(for='fdiscount') Discount
										.col-sm-10
											input#fdiscount.autonumeric.form-control(type='text', placeholder='0~10', name='discount', data-a-dec='.', data-a-sep=',', data-a-sign='')
									.form-group
										label.col-sm-2.control-label(for='faddDate') AddDate
										.col-sm-10
											.input-group.date.col-sm-6
												input#faddDate.form-control(type='text', name='addDate', placeholder='Pick a date')
												span.input-group-addon
													i.fa.fa-calendar
									.form-group
										label.col-sm-2.control-label(for='fendDate') EndDate
										.col-sm-10
											.input-group.date.col-sm-6
												input#fendDate.form-control(type='text', name='endDate', placeholder='Pick a date')
												span.input-group-addon
													i.fa.fa-calendar
									.form-group
										label.col-sm-2.control-label(for='fpos') Position
										.col-sm-10
											input#fpos.form-control(type='text', placeholder='1~99' value='', name='pos')
									.form-group
										label.col-sm-2.control-label(for='ftags') Tags
										.col-sm-10
											input#ftags.form-control(type='text', value='', name='tags', placeholder='Tags')
									.form-group
										.col-sm-offset-2.col-sm-10
											button.btn.btn-success(type='submit') Submit
			//- END PANEL
		//- END CONTAINER FLUID
block js
	script(src='/admin/assets/plugins/dropzone/dropzone.min.js', type='text/javascript')
	script(src='/admin/assets/plugins/jquery-autonumeric/autoNumeric.js', type='text/javascript')
	script(src='/admin/assets/plugins/bootstrap3-wysihtml5/bootstrap3-wysihtml5.all.min.js')
	script(src='/admin/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js', type='text/javascript')
	//- script(src='/admin/assets/plugins/bootstrap-tag/bootstrap-tagsinput.min.js', type='text/javascript')
	//- script(src='/admin/assets/js/scripts.js', type='text/javascript')
	script.
		// Number Process
		$('.autonumeric').autoNumeric('init');
		// Textarea
		//- $('.wysiwyg5').wysihtml5();
		// Datapicker
		$('#faddDate').datepicker({
			format: "mm/dd/yyyy",
		});
		$('#fendDate').datepicker({
			format: "mm/dd/yyyy",
		});
		// Public
		var elems = Array.prototype.slice.call(document.querySelectorAll('.switchery'));
		// Success color: #10CFBD
		elems.forEach(function(html) {
		  var switchery = new Switchery(html, {color: '#10CFBD'});
		});

