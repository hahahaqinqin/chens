extends ../layouts/layout
include ../components/list-menu-item

block content
	//- BEGIN JUMBOTRON
	section.jumbotron.demo-custom-height-1.full-width(data-pages-bg-image='/front/assets/images/Hero.jpg', data-pages='parallax', data-bg-overlay='black', data-overlay-opacity='0.4', style='margin-top: 110px;')
		.inner.full-height
			.container-xs-height.full-height
				.col-xs-height.col-middle.text-left
					.container
						.col-sm-6.col-sm-offset-3.sm-m-t-30.sm-p-t-20.sm-p-b-20
							h1.light.text-center.text-white.xs-p-t-30.sm-p-b-30
								| Digital solutions led by clarity, simplicity & honesty
	//- END JUMBOTRON
	//- BEGIN CONTENT
	section
		.bg-white.container
			ul.list-inline.m-t-30.m-b-30.m-l-0#menu
				li
					a.text-black.link.p-r-30(href='javascript:;') Latest
				li
					a.text-primary.hint-text.link.p-r-15(href='javascript:;') Popular
				li.b-l.b-grey
					a.text-black.hint-text.link.p-l-15.p-r-30(href='#breakfast') Breakfast
				li
					a.text-black.hint-text.link.p-r-30(href='#lunch') Lunch
				li
					a.text-black.hint-text.link.p-r-30(href='#dinner') Dinner
				li
					a.text-black.hint-text.link(href='#drinks') Drinks

	section.relative
		.bg-white.b-t.b-grey.p-b-30.p-t-40.container
			.row#breakfast
				.col-md-offset-1.p-t-60
					h2.all-caps.container.m-t-15.m-b-15 Breakfast
					+list_Menu_Item(post)
			.row#lunch
				.col-md-offset-1.p-t-60
					h2.all-caps.container.m-t-15.m-b-15 Lunch
					+list_Menu_Item(post)
			.row#dinner
				.col-md-offset-1.p-t-60
					h2.all-caps.container.m-t-15.m-b-15 Dinner
					+list_Menu_Item(post)
			.row#drinks
				.col-md-offset-1.p-t-60
					h2.all-caps.container.m-t-15.m-b-15 Drinks
					+list_Menu_Item(post)
	//- END CONTENT