						li
							a.text-master(herf='#')
								i.fa.fa-wechat
						li
							a.text-master(herf='#')
								i.fa.fa-twitter
						li
							a.text-master(herf='#')
								i.fa.fa-rss
			.card-footer.bg-master-lightest.clearfix
				.time few seconds ago
				ul.reactions
					li
						i.fa.fa-heart.m-r-5
						span.text-master-darkest.bold
