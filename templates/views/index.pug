extends ../layouts/layout

//- START MART-ITEM
mixin index_Product_Item(item)
	.gallery-item.col-sm-3.col-xs-12.no-padding.hover-zoom
		.inner.bottom-left.bottom-right.padding-30
			h5.block-title.text-white.no-margin= item.name
			h5.block-title.text-white.no-margin 
				if item.discount > 0 && item.discount < 10
					i.fa.fa-dollar.m-r-5
					-var dPrice = parseFloat(item.price * item.discount / 10).toFixed(3).toString()
					span.p-r-5=  dPrice.substr(0, dPrice.length-1)
					span.block-title.hint-text.line-through= item.price
				else 
					i.fa.fa-dollar.m-r-5
					span.p-r-5= item.price
			h6.block-title.fs-11.hint-text.text-white.m-t-5.m-b-0 #{moment(item.addDate).format('MM-DD-YYYY')}
			p.font-arial.fs-11.text-white.muted.m-t-5.m-b-0.hidden-sm= item.description
		.ar-1-1
			div(data-pages-bg-image='/front/assets/images/gallery_3.jpg', data-bg-overlay='black', data-overlay-opacity='0.4')
	//- END

//- START MENU-LIST
mixin index_Menu_Item(item)
	.col-xs-12.col-sm-4.post-card
		img.lazy.image-responsive-height(draggable='false', src="/front/assets/images/meal1.jpg", alt="")
		.post-card-body
			.m-t-30
				h5.all-caps.font-montserrat.no-margin= item.name
				h4.font-montserrat.no-margin
					if item.discount > 0 && item.discount < 10
						i.fa.fa-dollar.m-r-5
						-var dPrice = parseFloat(item.price * item.discount / 10).toFixed(3).toString()
						span.p-r-5=  dPrice.substr(0, dPrice.length-1)
						span.block-title.hint-text.line-through= item.price
					else 
						i.fa.fa-dollar.m-r-5
						span.p-r-5= item.price

				.clearfix
			p.fs-16.m-t-20= item.description
		.post-card-footer.m-t-30
			p.hint-text.small.pull-left #{moment(item.addDate).format('MM-DD-YYYY')}
			.clearfix
	//- END

block css
	link(href='/front/assets/plugins/swiper/css/swiper.css', rel='stylesheet', type='text/css', media='screen')
		
block content
	.page-wrappers
		//- BEGIN JUMBOTRON
		section.jumbotron.full-vh(data-pages='parallax')
			.inner.full-height
				//- BEGIN SLIDER
				#hero.swiper-container
					.swiper-wrapper
						//- BEGIN SLIDE
						.swiper-slide.fit
							//- BEGIN IMAGE PARRALAX
							.slider-wrapper
								.image(data-swiper-parallax='30%')
									img.image-responsive-height(draggable='false', src='/front/assets/images/hero_g.jpg', alt='', title='')
							//- END IMAGE PARRALAX
							//- BEGIN CONTENT
							.content-layer
								.inner.full-height
									.container-xs-height.full-height
										.col-xs-height.col-middle.text-left
											.container
												.col-xs-11.col-md-6.col-xs-offset-1
													h1.light.text-white
														| The new websites 
														br
														| on its way!
													h4.text-white Sign up for our spam free newsletter
													form.m-t-25.m-b-20(role='form', method='POST')
														.form-group.form-group-default.input-group.no-border.input-group-attached.col-md-12.col-sm-12.col-xs-12
															label.control-label(for='mail') Email Address
															input.form-control(type='email', name='mail' placeholder='Example@mailserver.com')
															span.input-group-btn
																button.btn.btn-black.btn-cons(type='submit') Subscribe!
													p.text-white.fs-12 Be first to find out when we Launch our product.
							//- END CONTENT
						//- END SLIDE
						//- BEGIN SLIDE
						.swiper-slide.fit
							//- BEGIN IMAGE PARRALAX
							.slider-wrapper
								.image(data-swiper-parallax='30%')
									img.image-responsive-height(draggable='false', src='front/assets/images/gallery_hero_1.jpg', alt='', title='')
							//- END IMAGE PARRALAX
							//- BEGIN CONTENT
							.content-layer
								.inner.full-height
									.container-xs-height.full-height
										.col-xs-height.col-middle.text-left
											.container
												.col-md-6.no-padding.col-xs-10.col-xs-offset-1
													h1.light.text-white.sm-text-center(data-swiper-parallax='-15%')  Authentic Chinese Cooking & Oriental Market
													h4.sm-text-center.text-white Si Chun Dishes, TaiWan Dishes, For Family, 
													h5.block-title.text-white.sm-text-center To Go and For here!
							//- END CONTENT
						//- END SLIDE
					//- BEGIN ANIMATED MOUSE
					.mouse-wrapper
						.mouse
							.mouse-scroll
					//- Add Navigation
					.swiper-navigation.swiper-dark-solid.swiper-button-prev
					.swiper-navigation.swiper-dark-solid.swiper-button-next
			//- END SLIDER
		//- END JUMBOTRON

		//- BEGIN INTRO CONTENT
		section.p-b-20.p-t-70
			.container.text-center
				.row
					.col-sm-8.col-sm-offset-2
						h6.block-title.m-b-0 Splendid and Popular
						h1.m-t-5.light FEATURED MEAL
		//- END INTRO CONTENT

		//- BEGIN FILTER
		section
			.container
				.b-b.b-grey.m-t-30
				.col-md-12.p-t-15.p-b-15.text-center
					ul.no-style.no-margin
						li.m-r-20.m-l-20.inline.xs-block.text-center.xs-p-b-5.xs-m-b-5.b-grey.xs-b-b
							a.link.active.text-black.fs-13.block-title(href='javascript:;') Today's Special
						li.m-r-20.m-l-20.inline.xs-block.text-center
							a.link.text-black.fs-13.block-title(href='/restaurant') more 
								i.pg-more
		//- END FILTER

		section.p-b-30
			.container
				.row
					if contextMenu.length
						each item in contextMenu
							+index_Menu_Item(item)
					else
						p No content.

		//- BEGIN INTRO CONTENT
		section.p-b-20.p-t-70
			.container.text-center
				.row
					.col-sm-8.col-sm-offset-2
						h6.block-title.m-b-0 Elegant that shines
						h1.m-t-5.light FEATURED PRODUCTS
		//- END INTRO CONTENT

		//- BEGIN PORTFOLIO SECTION
		section
			.container
				//- h1.text-center FEATURED PRODUCTS
				.b-b.b-grey.m-t-30
				.col-md-12.p-t-15.p-b-15.text-center
					ul.no-style.no-margin
						li.m-r-20.m-l-20.inline.xs-block.text-center.xs-p-b-5.xs-m-b-5.b-grey.xs-b-b
							a.link.active.text-black.fs-13.block-title(href='javascript:;') Today's Arrival
						li.m-r-20.m-l-20.inline.xs-block.text-center
							a.link.active.text-black.fs-13.block-title(href='/mart') more 
								i.pg-more
			.gallery.p-b-70
				.grid-sizer.col-sm-3.col-xs-6.no-padding
				if contextMart.length
					each item in contextMart
						+index_Product_Item(item)
				else
					p Coming soon...
		//- END PORTFOLIO SECTION
