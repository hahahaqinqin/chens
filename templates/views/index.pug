extends ../layouts/layout
include ../components/index-menu-item
include ../components/index-product-item

block css
	link(href='assets/plugins/swiper/css/swiper.css', rel='stylesheet', type='text/css', media='screen')
		
block content
	.page-wrappers
		//- BEGIN JUMBOTRON
		section.jumbotron.full-vh(data-pages='parallax')
			.inner.full-height
				//- BEGIN SLIDER
				#hero.swiper-container
					.swiper-wrapper
						//- BEGIN SLIDE
						.swiper-slide.fit
							//- BEGIN IMAGE PARRALAX
							.slider-wrapper
								.image(data-swiper-parallax='30%')
									img.image-responsive-height(draggable='false', src='assets/images/hero_g.jpg', alt='', title='')
							//- END IMAGE PARRALAX
							//- BEGIN CONTENT
							.content-layer
								.inner.full-height
									.container-xs-height.full-height
										.col-xs-height.col-middle.text-left
											.container
												.col-sm-6.col-sm-offset-1
													h1.light.text-white
														| The new websites 
														br
														| on its way!
													h4.text-white Sign up for our spam free newsletter
													form.m-t-25.m-b-20
														.form-group.form-group-default.input-group.no-border.input-group-attached.col-md-12.col-sm-12.col-xs-12
															label.control-label Email Address
															input.form-control(type='email', placeholder='Example@mailserver.com')
															span.input-group-btn
																button.btn.btn-black.btn-cons(type='button') Subscribe!
													p.text-white.fs-12 Be first to find out when we Launch our product.
							//- END CONTENT
						//- END SLIDE
						//- BEGIN SLIDE
						.swiper-slide.fit
							//- BEGIN IMAGE PARRALAX
							.slider-wrapper
								.image(data-swiper-parallax='30%')
									img.image-responsive-height(draggable='false', src='assets/images/gallery_hero_1.jpg', alt='', title='')
							//- END IMAGE PARRALAX
							//- BEGIN CONTENT
							.content-layer
								.inner.full-height
									.container-xs-height.full-height
										.col-xs-height.col-middle.text-left
											.container
												.col-md-6.no-padding.col-xs-10.col-xs-offset-1
													h1.light.text-white.sm-text-center(data-swiper-parallax='-15%')  Twenty & Counting... Unique Website Templates
													h4.sm-text-center.text-white Save time, save money, look more professional and win more clients.
													h5.block-title.text-white.sm-text-center Behind the scenes watch tour
							//- END CONTENT
						//- END SLIDE
					//- BEGIN ANIMATED MOUSE
					.mouse-wrapper
						.mouse
							.mouse-scroll
					//- Add Navigation
					.swiper-navigation.swiper-dark-solid.swiper-button-prev
					.swiper-navigation.swiper-dark-solid.swiper-button-next
			//- END SLIDER
		//- END JUMBOTRON

		//- BEGIN INTRO CONTENT
		section.p-b-20.p-t-70
			.container.text-center
				.row
					.col-sm-8.col-sm-offset-2
						h6.block-title.m-b-0 Elegant that shines
						h1.m-t-5.light FEATURED PRODUCTS
		//- END INTRO CONTENT

		//- BEGIN PORTFOLIO SECTION
		section
			.container
				//- h1.text-center FEATURED PRODUCTS
				.b-b.b-grey.m-t-30
				.col-md-12.p-t-15.p-b-15.text-center
					ul.no-style.no-margin
						li.m-r-20.m-l-20.inline.xs-block.text-center.xs-p-b-5.xs-m-b-5.b-grey.xs-b-b
							a.link.active.text-black.fs-13.block-title(href='#') all
						li.m-r-20.m-l-20.inline.xs-block.text-center.xs-p-b-5.xs-m-b-5.b-grey.xs-b-b
							a.link.active.text-black.fs-13.block-title(href='#') meat
						li.m-r-20.m-l-20.inline.xs-block.text-center.xs-p-b-5.xs-m-b-5.b-grey.xs-b-b
							a.link.active.text-black.fs-13.block-title(href='#') vegetable
						li.m-r-20.m-l-20.inline.xs-block.text-center.xs-p-b-5.xs-m-b-5.b-grey.xs-b-b
							a.link.active.text-black.fs-13.block-title(href='#') ingredients
						li.m-r-20.m-l-20.inline.xs-block.text-center
							a.link.active.text-black.fs-13.block-title(href='/mart') more 
								i.pg-more
			.gallery
				.grid-sizer.col-sm-3.col-xs-6.no-padding
				+index_Product_Item(post)
		//- END PORTFOLIO SECTION

		//- BEGIN INTRO CONTENT
		section.p-b-20.p-t-70
			.container.text-center
				.row
					.col-sm-8.col-sm-offset-2
						h6.block-title.m-b-0 Elegant that shines
						h1.m-t-5.light SPECIAL MEAL
		//- END INTRO CONTENT

		//- BEGIN FILTER
		section
			.container
				.b-b.b-grey.m-t-30
				.col-md-12.p-t-15.p-b-15.text-center
					ul.no-style.no-margin
						li.m-r-20.m-l-20.inline.xs-block.text-center.xs-p-b-5.xs-m-b-5.b-grey.xs-b-b
							a.link.active.text-black.fs-13.block-title(href='#') latest
						li.m-r-20.m-l-20.inline.xs-block.text-center.xs-p-b-5.xs-m-b-5.b-grey.xs-b-b
							a.link.active.text-black.fs-13.block-title(href='#') popular
						li.m-r-20.m-l-20.inline.xs-block.text-center
							a.link.active.text-black.fs-13.block-title(href='/restaurant') more 
								i.pg-more
		//- END FILTER

		section.p-b-30
			.container
				.row
					+index_Menu_Item(post)
block js
	//- BEGIN SWIPER DEPENDENCIES
	script(type='text/javascript', src='assets/plugins/velocity/velocity.min.js')
	script(type='text/javascript', src='assets/plugins/velocity/velocity.ui.js')
	script(type='text/javascript', src='assets/plugins/swiper/js/swiper.jquery.min.js')
	script(type='text/javascript', src='assets/js/custom.js')
	