		//- START ITEM
		.card.share.full-width(data-social='item')
			.card-content
				ul.buttons
					li
						a(href='#')
							span.label.font-montserrat.label-danger.fs-11 NEW
				img.lazy(alt='Quote', src='assets/images/gallery_5.jpg')
