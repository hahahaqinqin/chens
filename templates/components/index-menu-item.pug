mixin index_Menu_Item
	//- START POST
	.col-xs-12.col-sm-4.post-card
		img.lazy.image-responsive-height(draggable='false', src="front/assets/images/meal1.jpg", alt="")
		.post-card-body
			.m-t-30
				h5.all-caps.font-montserrat.no-margin= context.name
				h4.font-montserrat.no-margin
					i.fa.fa-dollar
					span= context.price
				.clearfix
			p.fs-16.m-t-20= context.description
		.post-card-footer.m-t-30
			p.hint-text.small.pull-left= context.addDate
			.clearfix
	//- END POST