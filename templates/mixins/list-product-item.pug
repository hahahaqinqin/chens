include ../mixins/share

mixin list_Product_Item(post)
	.col-sm-4.m-b-30
		//- START ITEM
		.card.share.full-width(data-social='item')
			.card-content
				ul.buttons
					li
						a(href='#')
							span.label.font-montserrat.label-danger.fs-11 NEW
				+share
				img.lazy(alt='Quote', src='assets/images/gallery_5.jpg')
			.card-description
				p Like if you agree
				p.m-b-0.semi-bold.text-master.font-montserrat.bold $0.00
				p.m-b-0.text-master.fs-12 Description here
			.card-footer.bg-master-lightest.clearfix
				.time few seconds ago
				ul.reactions
					li
						i.fa.fa-eye.m-r-5
						a.text-master-darkest.bold(href='#', data-animation-duration='800', data-pages-animate='number', data-value='post.price')
							| 0 
		//- END ITEM